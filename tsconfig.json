{
  "compilerOptions": {
    "outDir": "lib",
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "importHelpers": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictPropertyInitialization": false,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "bundler",
    "lib": ["es2017", "es2018", "es2019", "ES2020.Promise"],
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "plugins": []
  },
  "include": ["src"],
  "exclude": ["typings", "build", "node_modules", "**/node_modules/*"]
}
